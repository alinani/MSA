<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtBestShopOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
             android:textSize="16dp"
            android:textColor="#1B75BB"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/txtBestPriceOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="16dp"
            android:textColor="#1B75BB"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
           />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtBestPriceOther"
            android:layout_alignBottom="@+id/txtBestPriceOther"
            android:layout_toLeftOf="@+id/txtBestPriceOther"
            android:text="K"
            android:textColor="#1B75BB"
            android:textSize="16dp" />

    </RelativeLayout>

</LinearLayout>
